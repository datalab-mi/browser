{
  "settings": {
    "index" : {
      "highlight":{
      },
      "analysis" : {
        "filter" : {
          "french_elision": {
            "type":  "elision",
            "articles": [
              "l", "m", "t", "qu", "n", "s",
              "j", "d", "c", "jusqu", "quoiqu",
              "lorsqu", "puisqu"
            ]
          },
          "french_stop": { 
            "type":       "stop",
            "stopwords":  "_french_" 
          },
          "french_keywords": { 
            "type":       "keyword_marker",
            "keywords":   ["Exemple"] 
          },
          "french_stemmer": { 
            "type":       "stemmer",
            "language":   "light_french"
          }
          }
          ,
          "analyzer": {
            "auteur_analyzer" : {
              "tokenizer" : "standard" , 
              "filter" : "lowercase"},
              "rebuilt_french_text": {
                "tokenizer":  "standard",
                "filter": [
                  "lowercase",
                  "french_elision",
                  "french_elision",
                  "lowercase",
                  "french_stop",
                  "french_keywords",
                  "french_stemmer"
                ]
              },
              "rebuilt_french_query": {
                "tokenizer":  "standard",
                "filter": [
                  "lowercase",
                  "french_elision",
                  "french_elision",
                  "lowercase",
                  "french_stop",
                  "french_keywords",
                  "french_stemmer"
                ]
              }
          }

      }
    }
  }, 
  "mappings":{
    "properties": {
      "CORPS": {
        "type": "text",
        "analyzer" : "rebuilt_french_text",
        "search_analyzer" : "rebuilt_french_query"
      },
      "Titre": {
        "type": "text",
        "analyzer" : "rebuilt_french_text",
        "search_analyzer" : "rebuilt_french_query"
      },
      "Date": {
        "type" : "date" , 
        "format" : "yyyy-MM-dd" 
      },
      "Auteurs" : {
        "type" : "text",
        "analyzer" : "auteur_analyzer"
      }
    }
  }
}
