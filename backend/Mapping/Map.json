{
    "settings": {
        "index" : {
            "analysis" : {
                "filter" : {
                    "french_elision": {
                    "type":  "elision",
                    "articles": [
                      "l", "m", "t", "qu", "n", "s",
                      "j", "d", "c", "jusqu", "quoiqu",
                      "lorsqu", "puisqu"
            ]
        },
                    "french_stop": { 
                      "type":       "stop",
                      "stopwords":  "_french_" 
                    },
                    "french_keywords": { 
                      "type":       "keyword_marker",
                      "keywords":   ["Exemple"] 
                    },
                    "french_stemmer": { 
                      "type":       "stemmer",
                      "language":   "light_french"
                    },
                    "synonym_igpn" : {
                        "type" : "synonym"

                                },
                    "synonym_dictionnaire" : {  
                        "type" : "synonym"

                                }
                            }
           ,
                  "analyzer": {
                    "rebuilt_french_text": {
                      "tokenizer":  "standard",
                      "filter": [
                        "french_elision",
                        "synonym_dictionnaire",
                        "synonym_igpn",
                        "french_elision",
                        "lowercase",
                        "french_stop",
                        "french_keywords",
                        "french_stemmer"
                      ]
                    },
                    "rebuilt_french_query": {
                      "tokenizer":  "standard",
                      "filter": [
                        "french_elision",
                        "synonym_igpn",
                        "french_elision",
                        "lowercase",
                        "french_stop",
                        "french_keywords",
                        "french_stemmer"
                      ]
                    }
                  }
                
        }
    }
}, 
